<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu"
            android:layout_weight="0.05"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:weightSum="1">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/home2"
            android:layout_width="23dp"
            android:layout_height="match_parent" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="HOME"
            android:id="@+id/Home"
            android:layout_weight="0.03"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_group"
        style="@style/LinearLayout.GuillotineItem"
        android:weightSum="1">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="@string/feed"
            android:layout_weight="0.06" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/events"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/events"
            android:layout_width="23dp"
            android:layout_height="21dp" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="EVENTS" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/gallery"
            android:layout_width="23dp"
            android:layout_height="21dp" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="PHOTOGALLERY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/register"
            android:layout_width="23dp"
            android:layout_height="21dp" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="REGISTRATION" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/team"
            android:layout_width="23dp"
            android:layout_height="21dp" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="OUR TEAM" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/sponsors"
            android:layout_width="23dp"
            android:layout_height="21dp" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="SPONSORS" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/reachus1"
            android:layout_width="23dp"
            android:layout_height="21dp" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="REACH US" />
    </LinearLayout>








</LinearLayout>